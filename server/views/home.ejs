      /* For Text Animation */
      @import url("https://fonts.googleapis.com/css?family=Poppins:100,200,300,400,500,600,700,800,900");
      .content {
        position: relative;
      }

      .content h3 {
        color: #fff;
        font-size: 8em;
        position: absolute;
        transform: translate(-45%, -50%);
      }

      .content h3:nth-child(1) {
        color: transparent;
        -webkit-text-stroke: 2px #256685;
      }

      .content h3:nth-child(2) {
        transform: translate(-45%, -66%);
        color: #03a9f4;
        animation: animate 3s ease-in-out infinite;
      }

      @keyframes animate {
        0%,
        100% {
          clip-path: polygon(
            0% 0%,
            16% 90%,
            33% 50%,
            54% 60%,
            70% 61%,
            84% 59%,
            100% 52%,
            100% 100%,
            0% 80%
          );
        }

        50% {
          clip-path: polygon(
            0% 60%,
            15% 65%,
            34% 66%,
            51% 62%,
            67% 50%,
            84% 45%,
            100% 46%,
            100% 100%,
            0% 100%
          );
        }
